<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Background color when item is checked/selected -->
            <solid android:color="#002147" /> <!-- Ganti dengan warna yang diinginkan -->
            <!-- Custom shape -->
            <corners android:radius="20dp" /> <!-- Ganti dengan radius yang diinginkan -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <!-- Background color when item is unchecked/not selected -->
            <solid android:color="#FDC800" /> <!-- Ganti dengan warna yang diinginkan -->
            <!-- Custom shape -->
            <corners android:radius="20dp" /> <!-- Ganti dengan radius yang diinginkan -->
        </shape>
    </item>
</selector>
