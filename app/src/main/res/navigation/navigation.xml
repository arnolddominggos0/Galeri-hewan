<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.d3if3024.galerihewan.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_galeriFragment"
            app:destination="@id/galeriFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if3024.galerihewan.ui.AboutFragment"
        android:label="About" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="org.d3if3024.galerihewan.ui.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="namaDetail"
            app:argType="string" />
        <argument
            android:name="imgDetail"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/galeriFragment"
        android:name="org.d3if3024.galerihewan.ui.galeri.GaleriFragment"
        android:label="GaleriFragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="org.d3if3024.galerihewan.ui.history.HistoryFragment"
        android:label="HistoryFragment" />
</navigation>